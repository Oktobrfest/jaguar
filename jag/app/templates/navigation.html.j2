{% block navigation %}
	<header>
		<nav class="navbar-outer-element">
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
				<nav class="container">

					<button class="navbar-toggler"
													type="button"
													data-bs-toggle="collapse"
													data-bs-target="#navbar">
						<span class="navbar-toggler-icon"></span>
					</button>

					<div class="collapse navbar-collapse"
										id="navbar">
						<div class="navbar-nav">

							<a class="nav-item nav-link {% if request.path == url_for('frontend.home') %}active{% endif %}"
										id="player-page"
										href={{ url_for('frontend.home') }}>Home</a>

							<a class="nav-item nav-link
               {% if request.path == url_for('frontend.ai') %}active{% endif %}"
										id="ai-page"
										href="/ai">AI</a>

							<a class="nav-item nav-link
									{% if request.path == url_for('frontend.player', appname='test',
 										streamname='test') %}active{% endif %}"
										href="{{ url_for('frontend.player', appname='test', streamname='test') }}">Stream
								Player</a>


							<a class="nav-item nav-link {% if request.path == url_for('frontend.setup_helper') %}active{% endif %}"
										id="setup-helper-page"
										href={{ url_for('frontend.setup_helper') }}>Setup
								Helper</a>

							<a class="nav-item nav-link {% if request.path == url_for('frontend.settings') %}active{% endif %}"
										id="settings-page"
										href="{{ url_for('frontend.settings') }}">Settings</a>


							<a class="nav-item nav-link {% if request.path == url_for('auth.logout') %}active{% endif %}"
										id="logout"
										href="/logout">Logout {{ user.username }}</a>

						 {% if not user.is_authenticated %}

								<a class="nav-item nav-link {% if request.path == url_for('auth.login') %}active{% endif %}"
											id="login"
											href="/login">Login</a>
								<a class="nav-item nav-link {% if request.path == url_for('auth.signup') %}active{% endif %}"
											id="signUp"
											href="/signup">Sign Up</a>

							{% endif %}

						</div>
					</div>
				</nav>
			</nav>
		</nav>
	</header>
{% endblock %}